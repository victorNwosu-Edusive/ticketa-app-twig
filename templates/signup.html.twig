{% extends "base.html.twig" %}
{% block content %}
{% if toast %}
  {% include 'components/toast.html.twig' with { toast: toast } %}
{% endif %}

<div class="flex justify-center items-center min-h-screen bg-white md:bg-gray-100">
  <div class="bg-white shadow-none md:shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center text-blue-700">Sign Up</h2>

    <form method="POST" action="#" class="space-y-5">
      <div>
        <label class="block mb-1 font-medium">Name</label>
        <input type="text" name="name" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-blue-600">
         {% if errors.name %}
            <p class="text-sm text-red-500 mt-1">{{ errors.name }}</p>
          {% endif %}
      </div>

      <div>
        <label class="block mb-1 font-medium">Email</label>
        <input type="email" name="email" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-blue-600">
        {% if errors.email %}
            <p class="text-sm text-red-500 mt-1">{{ errors.email }}</p>
          {% endif %}
      </div>

      <div>
        <label class="block mb-1 font-medium">Password</label>
        <input type="password" name="password" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-blue-600">
        {% if errors.password %}
            <p class="text-sm text-red-500 mt-1">{{ errors.password }}</p>
          {% endif %}
      </div>

      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition">
        Create Account
      </button>

      <p class="text-center text-sm mt-3">
        Already have an account?
        <a href="/login.php" class="text-blue-600 hover:underline">Log in</a>
      </p>
    </form>
  </div>
</div>
{% endblock %}
