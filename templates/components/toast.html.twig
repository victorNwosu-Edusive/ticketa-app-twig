{% if toast %}
  <div
    id="toast"
    class="
      fixed w-full md:w-fit top-4 md:top-5 md:right-5 z-50 px-10 py-2 rounded-md
      {% if toast.type == 'error' %}
        bg-red-100 border border-red-500 text-red-500
      {% elseif toast.type == 'info' %}
        bg-blue-100 text-blue-700
      {% else %}
        bg-green-100 border border-green-500 text-green-600
      {% endif %}
    ">
    {{ toast.message }}
  </div>
  <script>
    setTimeout(() => {
      const toast = document.getElementById('toast');
      if (toast) {
        toast.style.transition = 'opacity 0.3s ease';
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 300);
      }
    }, 2000);
  </script>
{% endif %}
