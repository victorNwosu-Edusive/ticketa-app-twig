{% extends "base.html.twig" %}

{% block content %}
{% include 'partials/navbar.twig' %}

{% if toast %}
  {% include 'components/toast.html.twig' with { toast: toast } %}
{% endif %}

<div class="max-w-2xl mx-auto px-6 py-10">
  <div class="mb-8">
    <h1 class="text-2xl md:text-3xl font-bold mb-2">Edit Ticket</h1>
    <p class="text-gray-500">Update ticket information</p>
  </div>

  <div class="bg-white shadow-md border-[1px] rounded-lg p-8">
    <form method="POST" class="space-y-6">
      <div>
        <label class="block font-semibold mb-2">Title</label>
        <input type="text" name="title" value="{{ ticket.title }}" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-blue-600">
      </div>

      <div>
        <label class="block font-semibold mb-2">Description</label>
        <textarea name="description" required rows="6" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-blue-600">{{ ticket.description }}</textarea>
      </div>

      <div>
        <label class="block font-semibold mb-2">Status</label>
        <select name="status" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-blue-600">
          <option value="open" {% if ticket.status == 'open' %}selected{% endif %}>Open</option>
          <option value="in_progress" {% if ticket.status == 'in_progress' %}selected{% endif %}>In Progress</option>
          <option value="closed" {% if ticket.status == 'closed' %}selected{% endif %}>Closed</option>
        </select>
      </div>

      <div class="flex gap-4">
        <button type="submit" class="text-[13px] md:text-[15px] flex-1 bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition font-semibold">
          Save Changes
        </button>
        <a href="/tickets.php" class="text-[13px] md:text-[15px] flex-1 bg-gray-200 text-gray-800 py-2 rounded-lg hover:bg-gray-300 transition text-center font-semibold">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>
{% endblock %}